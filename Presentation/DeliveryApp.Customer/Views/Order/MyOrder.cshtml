@{
}




<section style="min-height:550px" class="py-4 osahan-main-body">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <ul class="nav nav-tabsa custom-tabsa border-0 flex-column bg-white rounded overflow-hidden shadow-sm p-2 c-t-order"
                        id="myTab" role="tablist">

                        <li class="nav-item" role="presentation">
                            <a class="nav-link border-0 text-dark py-3 " id="@OrderStatus.Completed-tab" data-toggle="tab" 
                                href="#@OrderStatus.Completed" role="tab" aria-controls="@OrderStatus.Completed" aria-selected="false">
                            <i class="feather-check mr-2 text-success mb-0"></i> Completed</a>
                        </li>
                         <li class="nav-item" role="presentation">
                            <a class="nav-link border-0 text-dark py-3 " id="@OrderStatus.Processing-tab" data-toggle="tab" 
                                href="#@OrderStatus.Processing" role="tab" aria-controls="@OrderStatus.Processing" aria-selected="false">
                            <i class="feather-clock mr-2 text-warning mb-0"></i> Processing</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link border-0 text-dark py-3 " id="@OrderStatus.Unpaid-tab" data-toggle="tab" 
                                href="#@OrderStatus.Unpaid" role="tab" aria-controls="@OrderStatus.Unpaid" aria-selected="false">
                            <i class="fa-solid fa-comment-dollar mr-2 text-danger mb-0"></i> Unpaid</a>
                        </li>
                         <li class="nav-item" role="presentation">
                            <a class="nav-link border-0 text-dark py-3 " id="@OrderStatus.Shipped-tab" data-toggle="tab" 
                                href="#@OrderStatus.Shipped" role="tab" aria-controls="@OrderStatus.Shipped" aria-selected="false">
                            <i class="fa-solid fa-truck-fast mr-2 text-primary mb-0"></i> Shipped</a>
                        </li>
                        
                        <li class="nav-item" role="presentation">
                            <a class="nav-link border-0 text-dark py-3 " id="@OrderStatus.Canceled-tab" data-toggle="tab" 
                                href="#@OrderStatus.Canceled" role="tab" aria-controls="@OrderStatus.Canceled" aria-selected="false">
                            <i class="feather-x-circle mr-2 text-danger mb-0"></i> Canceled</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content col-md-9" id="myTabContent">
                @foreach (var s in Enum.GetValues<OrderStatus>())
                {
                     <div class="tab-pane fade show active" id="@s" role="tabpanel"
                        aria-labelledby="@s-tab">
                        <div class="order-body">
                           @foreach (var item in Model)
                            {
                                if (s == item.OrderStatus)
                                {
                                     <div class="pb-3">
                                        <div class="p-3 rounded shadow-sm bg-white">
                                            <div class="d-flex border-bottom pb-3">
                                                <div class="text-muted mr-3">
                                                    <img alt="#" src="@item.Company.ImageUrl" class="img-fluid order_img rounded">
                                                </div>
                                                <div>
                                                    <p class="mb-0 font-weight-bold"><a asp-controller="company" asp-action="restaurant" asp-route-id="@item.Company.Id"
                                                            class="text-dark">@item.Company.Name</a></p>
                                                    <p class="mb-0">@item.Company.Address</p>
                                                    <p>ORDER #@item.TrackingNo</p>
                                                    <p class="mb-0 small"><a asp-controller="order" asp-action="detail" asp-route-id="@item.Id">View Details</a></p>
                                                </div>
                                                <div class="ml-auto">
                                                    <p class="bg-success text-white py-1 px-2 rounded small mb-1">@item.OrderStatus</p>
                                                    <p class="small font-weight-bold text-center"><i class="feather-clock"></i>
                                                        @item.CreatedDate.ToLongDateString()</p>
                                                </div>
                                            </div>
                                            <div class="d-flex pt-3">
                                                <div class="small">
                                                    @foreach (var p in item.OrderItems)
                                                    {
                                                        <p class="text- font-weight-bold mb-0">@p.Product.Name x @p.ProductCount</p>
                                                    }
                                                </div>
                                                <div class="text-muted m-0 ml-auto mr-3 small">Total Payment<br>
                                                    <span class="text-dark font-weight-bold">$@item.TotalPrice</span>
                                                </div>
                                                <div class="text-right">
                                                    <a asp-controller="order" asp-action="checkout" class="btn btn-primary px-3">Reorder</a>
                                                    <a asp-controller="contact" asp-action="help" class="btn btn-outline-primary px-3">Help</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            
                        </div>
                    </div>
                }
               
                        
                 
                
                </div>
            </div>
        </div>
    </section>