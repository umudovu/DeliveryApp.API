@model CreateUser

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Food Ride Courier</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="~/vendors/feather/feather.css">
  <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="~/images/favicon.png" />
</head>

<body>

    <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth p-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo mb-0 d-flex justify-content-center">
               <a class="navbar-brand brand-logo mr-5" style="font-weight:bold" asp-controller="home" asp-action="index">Food Ride</a>
              </div>
              <h4>New here?</h4>
              <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
              <form method="post" enctype="multipart/form-data" class="pt-3">
                    <span asp-validation-for="Name" class="text-danger"></span>
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    <div class="form-group">
                    <label asp-for="Name" class="text-dark">Name</label>
                    <div class="row">
                        <div class="col-6">
                            <input asp-for="Name" placeholder="First Name" class="form-control mb-1"  aria-describedby="nameHelp">
                        </div>
                        <div class="col-6">
                    <input asp-for="SurName" placeholder="Last Name" class="form-control"  aria-describedby="nameHelp">
                        </div>

                    </div>
                    </div>

                    <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                           <label asp-for="PhoneNumber" class="text-dark">Mobile Number</label>
                    <input  placeholder="Enter Mobile" class="form-control" asp-for="PhoneNumber" >
                        </div>
                        <div class="col-6">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <label asp-for="Email" class="text-dark">E-mail</label>
                    <input  placeholder="Enter email" class="form-control" asp-for="Email" >
                        </div>
                    </div>
                    </div>


                    <span asp-validation-for="Address" class="text-danger"></span>
                    <div class="form-group">
                    <label asp-for="Address" class="text-dark">Address</label>
                    <input  placeholder="Enter addess" class="form-control" asp-for="Address" >
                    </div>

                    <div class="form-group">
                    <label asp-for="Password" class="text-dark">Password</label>
                    <div class="row">
                        <div class="col-6">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input  placeholder="Password" class="form-control" asp-for="Password">
                        </div>
                        <div class="col-6">
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            <input  placeholder="Confirm Password" class="form-control" asp-for="PasswordConfirm">

                        </div>
                    </div>
                    </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >SIGN UP</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a asp-action="login" class="text-primary">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>


  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="~/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="~/js/off-canvas.js"></script>
  <script src="~/js/hoverable-collapse.js"></script>
  <script src="~/js/template.js"></script>
  <script src="~/js/settings.js"></script>
  <script src="~/js/todolist.js"></script>
  <!-- endinject -->
</body>

</html>
